<?xml version='1.0' encoding='utf-8'?>
<widget id="com.claireyoung.cordovasamples" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cordova Samples</name>
    <description>
        A sample Apache Cordova application.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <hook type="after_platform_add" src="scripts/android/copy_android_viewer.sh" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.1" />
    <plugin name="de.sitewaerts.cordova.documentviewer" spec="https://github.com/claireyoung/cordova-plugin-document-viewer.git" />
    <plugin name="cordova-plugin-purchase" spec="https://github.com/j3k0/cordova-plugin-purchase.git">
        <variable name="BILLING_KEY" value="BILLING_KEYTEST" />
    </plugin>
</widget>
